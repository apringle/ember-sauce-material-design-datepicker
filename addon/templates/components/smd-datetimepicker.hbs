<div class="calendar">

  <div class="date-display">
    <div class="header">
      <span>{{selectedDate}}</span>
    </div>

    <div class="display-date">
      <div class="month">{{selectedMonth}}</div>
      <div class="day">{{selectedDay}}</div>
      <div class="year">{{selectedYear}}</div>
      {{#if showTime}}
        <div class="time" {{action 'toggleTimeSelector'}}>{{selectedTime}}</div>
      {{/if}}
    </div>
  </div>

  {{#if showCalendarPanel}}
    {{ smd-calendar-panel toggleAction='toggleMonthView' navAction='changeMonth' }}
  {{/if}}

  {{#if showMonthSelector}}
    {{ smd-month-selector }}
  {{/if}}

  {{#if showYearSelector}}
    {{ smd-year-selector }}
  {{/if}}

  {{#if showTimeSelector}}
    {{ smd-time-selector }}
  {{/if}}

</div>

<div class="window-actions">
  <div>Cancel</div>
  <div>Ok</div>
</div>
